<%= form_tag members_path(@org.permalink, format: :js), id: "filter_form" do %>
	<select id="choose_segment">
		<option value="<%= members_path(@org.permalink, format: :js) %>">All Contacts</option>
		<% @org.segments.each do |segment| %>
			<%= content_tag :option, value: members_path(@org.permalink, segment_id: segment.id, format: :js), data: { filters: segment.filters }, selected: @segment && @segment.id == segment.id do %>
				<%= segment.name %>
			<% end %>
		<% end %>
	</select>
	
	<ul class="segment_meta">
		<li><%= link_to "Delete", "#", method: :delete, remote: true, class: "delete_this_segment", data: { confirm: "Are you sure you want to delete this segment?", href: segment_path(@org.permalink, "-") } %></li>
		<li><%= link_to "Rename", "#", remote: true, class: "edit_this_segment", data: { href: edit_segment_path(@org.permalink, "-") } %></li>
	</ul>
	
	<div class="clear"></div>
	
	<ul id="filters">
		<% %w[first_name last_name email].each do |field| %>
			<li class="disabled disablable">
				<%= check_box_tag "#{field}" %>
				<%= label_tag "#{field}", field.humanize %>
				
				<div class="indent field">
					<%= hidden_field_tag "#{field}_field", field, data: { field: true } %>
					<%= hidden_field_tag "#{field}_matcher", "like", data: { matcher: true } %>
					<%= text_field_tag "#{field}_value", nil, data: { value: true } %>
				</div>
			</li>
		<% end %>
		
		<% if @org.modules.include? "attendance" %>
			<li class="insert_before">
				<%= link_to "+ Add Event Filter", "#", class: "add_event_filter button small grey_bg" %>
			</li>
		<% end %>
	</ul>
	
	<%= link_to "Save As New Segment", new_segment_path(@org.permalink), remote: true, class: "save_as_new_segment big blue_bg button" %>
	
	<%= link_to "<span class=\"saved\">Save As \"<span class=\"segment_name\"></span>\"</span><span class=\"saving\">Saving...</span>".html_safe, "#", method: :patch, remote: true, class: "save_this_segment", data: { href: segment_path(@org.permalink, "-", format: :js) } %>
<% end %>

<ul class="templates">
	
	<li class="event_filter_template event_filter">
		<ul class="no_indent">
			<li class="disabled disablable">
				<%= link_to "x", "#", class: "delete_filter" %>
