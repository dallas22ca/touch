<%= link_to "x", "#", class: "close_lightbox close_button" %>
<h1><%= @channel.new_record? ? "Create A" : "Edit" %> Channel</h1>
	
<div class="content">
	<%= form_for @channel, url: @channel.new_record? ? channels_path(@org.permalink) : channel_path(@org.permalink, @channel), remote: true do |f| %>
	  <% if @channel.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@channel.errors.count, "error") %> prohibited this channel from being saved:</h2>

	      <ul>
	      <% @channel.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= f.label :name %><br>
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :archived %><br>
	    <%= f.check_box :archived %>
	  </div>
		
		<% if @channel.new_record? %>
		  <div class="field">
		    <%= f.label :seed, "Copy tasks from a template or other channel" %><br>
		    <%= f.select :seed, options_for_select([["Sample Buyer Template", "buyer"]] + @org.channels.map{ |f| [f.name, f.id] }, "buyer"), include_blank: "Don't copy any tasks" %>
		  </div>
		<% end %>
		
	  <div class="actions">
			<%= f.submit "Save Channel", class: "big blue_bg button" %>
			
			<%= link_to "Close", "#", class: "close_lightbox" %>
			
			<% if @channel.persisted? %>
				<%= link_to "Delete", channel_path(@org.permalink, @channel), method: :delete, data: { confirm: "Are you sure you want to delete this channel?" } %>
			<% end %>
	  </div>
	<% end %>
</div>