<% if @fship.errors.any? %>
	alert("<%= @fship.errors.full_messages.join(", ") %>")
<% else %>
	<% if @fship.resend %>
		alert("The invitation to <%= @fship.member.name %> has been re-sent.")
	<% else %>
		$("#<%= dom_id @fship %>").replaceWith("<%= j render @fship %>")
		Lightbox.close()
	<% end %>
<% end %>