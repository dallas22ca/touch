<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= f.hidden_field :invitation_token, value: params[:token] if params[:token] %>
  <%= devise_error_messages! %>
	
  <div><%= f.label :name, class: "label" %>
  <%= f.text_field :name %></div>

  <div><%= f.label :email, class: "label" %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign Up" %></div>
	
	<%= link_to "Sign In", new_user_session_path(token: params[:token]) %>
<% end %>