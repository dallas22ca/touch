<div class="container narrow">

	<div class="center">
		<% if @org %>
			<%= link_to image_tag(@org.logo.url), request.path, id: "logo" %>
		<% else %>
			<%= link_to image_tag("/#{@website["domain"]}/imgs/logo.png"), root_url(subdomain: "www"), id: "logo" %>
		<% end %>
	</div>
	
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= f.hidden_field :invitation_token, value: params[:token] if params[:token] %>
		<%= hidden_field_tag :permalink, params[:permalink] if params[:permalink] %>
		<%= hidden_field_tag :domain, cookies[:domain] %>
		
		<p class="tagline"><%= @website["tagline"] %></p>
		
		<% if alert %>
			<% useful_alert = alert != "You need to sign in or sign up before continuing." %>
			<p class="alert"><%= alert %></p>
		<% end %>

		<div class="signin_method" data-signin="fb" style="<%= "display: none;" if useful_alert %>">
			<%= link_to "Sign up using Facebook <i class=\"fa fa-facebook\"></i>".html_safe, omniauth_authorize_path(resource_name, :facebook), class: "big fb_bg button with_icon full_width" %><br />
			<%= link_to "I'd rather sign up using my email address.", "#", class: "help_link toggle_signin_method", data: { signin: "email" } %>
		</div>

		<div class="signin_method" data-signin="email" style="<%= "display: none;" unless useful_alert %>">
		  <div class="field">
				<%= f.label :name, class: "label" %>
				<%= f.text_field :name %>
			</div>
		  
			<div class="field">
				<%= f.label :email, class: "label" %>
				<%= f.email_field :email %>
			</div>

		  <div class="field">
				<%= f.label :password, class: "label" %>
				<%= f.password_field :password, autocomplete: "off" %>
			</div>
			
		  <div class="field">
				<%= f.label :password_confirmation, "Confirm Your Password", class: "label" %>
				<%= f.password_field :password_confirmation, autocomplete: "off" %>
			</div>

		  <div class="actions">
				<%= f.hidden_field :remember_me, value: true %>
				<%= f.button "Sign Up <i class=\"fa fa-paper-plane\"></i>".html_safe, class: "big blue_bg button full_width" %>
				<%= link_to "I'd rather sign in using Facebook.", "#", class: "help_link toggle_signin_method", data: { signin: "fb" } %>
			</div>
		</div>
	<% end %>

	<div class="center">
		<%= link_to "Help: I already have an account!", new_user_session_path, class: "help_link" %>
	</div>

</div>