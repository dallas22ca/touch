<%= content_tag_for :tr, document do %>
	<td class="name">
		<%= link_to document.file_file_name, channel_document_download_path(document.channel.organization.permalink, document.channel, document), target: :blank %>
	</td>
	<td class="created_at"><%= link_to document.created_at.strftime("%b %-d"), channel_document_download_path(document.channel.organization.permalink, document.channel, document), target: :blank %></td>
	<td>
		<%= link_to "x", channel_document_path(document.channel.organization.permalink, document.channel, document), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this document?" }, class: "delete" %>
	</td>
<% end %>