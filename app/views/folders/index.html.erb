<% title do %>
	<h1 class="avatar"><%= link_to image_tag(current_user.avatar.url, class: "user_avatar"), root_path %></h1>
	<h1><%= link_to image_tag(@org.logo.url), root_path %></h1>
<% end %>

<% if @member.folderships.unaccepted.any? %>
	<h3>Invitations</h3>
	<ul>
		<% @member.folderships.unaccepted.each do |foldership| %>
			<li>
				<%= foldership.folder.name %> by
				<%= foldership.folder.creator.name %>
				<%= link_to "Accept", folder_foldership_accept_path(foldership.folder.organization, foldership.folder, foldership, foldership: { accepted: true }), method: :post %>
			</li>
		<% end %>
	</ul>
<% end %>

<div class="container">
	<ul id="folders" class="panels">
		<% if @member.permits? :folders, :write %>
			<li class="folder panel center">
				<a href="<%= new_folder_path %>" data-remote="true">
					<h3>Create A Folder</h3>
					<%= image_tag "/imgs/plus.png", class: "plus" %>
				</a>
			</li>
		<% end %>
	  <%= render @folders %>
	</ul>
</div>