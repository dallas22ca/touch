<%= render "folders/header" %>

<div class="has_header">
	<%= render "folders/sidebar" %>

	<div class="main <%= "has_sidebar" if @does_have_sidebar %>">
		<div class="loading"></div>
	
		<div class="mini_content_wrapper">
			
			<%= link_to "&larr; Back".html_safe, folder_homes_path(@org, @folder), class: "small grey_bg button" %><br><br>

			<%= form_for [@folder, @home], url: @home.new_record? ? folder_homes_path(@org, @folder) : folder_home_path(@org, @folder, @home) do |f| %>
			  <% if @home.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@home.errors.count, "error") %> prohibited this home from being saved:</h2>

			      <ul>
			      <% @home.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="field">
			    <%= f.label :long_address, class: "label" %>
			    <%= f.text_field :long_address, autocomplete: :off, autofill: :off %>
			  </div>
			  <div class="field">
			    <%= f.label :address, class: "label" %>
			    <%= f.text_field :address, autocomplete: :off, autofill: :off, data: { address: true } %>
			  </div>
			  <div class="field">
			    <%= f.label :city, class: "label" %>
			    <%= f.text_field :city, data: { city: true } %>
			  </div>
			  <div class="field">
			    <%= f.label :province, class: "label" %>
			    <%= f.text_field :province, data: { province: true } %>
			  </div>
			  <div class="field">
			    <%= f.label :postal_code, class: "label" %>
			    <%= f.text_field :postal_code, data: { postal_code: true } %>
			  </div>
			  <div class="field">
			    <%= f.label :beds, class: "label" %>
			    <%= f.text_field :beds %>
			  </div>
			  <div class="field">
			    <%= f.label :baths, class: "label" %>
			    <%= f.text_field :baths %>
			  </div>
			  <div class="field">
			    <%= f.label :price, class: "label" %>
			    <%= f.text_field :price %>
			  </div>
			  <div class="field">
			    <%= f.label :longitude, class: "label" %>
			    <%= f.text_field :longitude, data: { longitude: true } %>
			  </div>
			  <div class="field">
			    <%= f.label :latitude, class: "label" %>
			    <%= f.text_field :latitude, data: { latitude: true } %>
			  </div>
			  <div class="actions">
			    <%= f.submit "Save Home", class: "big blue_bg button" %>
			  </div>
			<% end %>

		</div>
	
	</div>
</div>