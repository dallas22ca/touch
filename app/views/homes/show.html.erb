<%= render "folders/header" %>

<div class="has_header">
	<%= render "folders/sidebar" %>

	<div class="main <%= "has_sidebar" if @does_have_sidebar %>">
		<div class="loading"></div>
	
		<div class="mini_content_wrapper">			
			<% if @foldership.permits? :homes, :write %>
				<p>
					<%= link_to "Edit", edit_folder_home_path(@org, @folder, @home) %>
				</p>
			<% end %>
			<p>
			  <strong>Address:</strong>
			  <%= @home.address %>
			</p>

			<p>
			  <strong>City:</strong>
			  <%= @home.city %>
			</p>

			<p>
			  <strong>Province:</strong>
			  <%= @home.province %>
			</p>

			<p>
			  <strong>Postal code:</strong>
			  <%= @home.postal_code %>
			</p>

			<p>
			  <strong>Beds:</strong>
			  <%= @home.beds %>
			</p>

			<p>
			  <strong>Baths:</strong>
			  <%= @home.baths %>
			</p>
			
		</div>
		
	</div>
</div>
