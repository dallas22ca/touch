<div class="sidebar">
	<%= render "filters" %>
</div>

<div class="main has_sidebar">
	<div id="searcher">
		<%= form_tag request.path, method: :get, remote: true do %>
			<%= text_field_tag :q, nil, placeholder: "Search..." %>
			<%= select_tag :qt, options_for_select(["All Contacts", "Regulars", "Occasionals", "New Guests", "Archived"]) %>
		<% end %>
	</div>
	
	<table id="contacts" class="table">
		<thead>
			<tr>
				<th>
					<div class="loading"></div>
					<%= check_box_tag :nice %>
				</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody>
			<% @members.each do |member| %>
				<tr>
					<td><%= check_box_tag :nice %></td>
					<td><%= link_to member.data["first_name"], "" %></td>
					<td><%= link_to member.data["last_name"], "" %></td>
					<td><%= link_to member.data["email"], "" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>