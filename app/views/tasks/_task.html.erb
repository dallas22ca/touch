<%= content_tag_for :li, task, data: { url: folder_task_path(task.folder.organization.permalink, task.folder, task), content: task.content }, class: "#{"complete" if task.complete}" do %>
	<div class="meta_links">
		<%= link_to "x", folder_task_path(task.folder.organization.permalink, task.folder, task), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this task?" }, class: "delete" %>
		<%= link_to "&uarr;&darr;".html_safe, "#", class: "handle" %>
	</div>
	<div class="meta">
		<%= check_box_tag "#{dom_id task}_complete", false, task.complete %>
	</div>
	<p class="content" <%= "contenteditable" unless task.complete %>><%= task.content %></p>
	<div class="clear"></div>
<% end %>