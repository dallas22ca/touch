<%= content_tag_for :li, task, data: { url: folder_task_path(task.folder.organization.permalink, task.folder, task), content: task.content } do %>
	<%= check_box_tag "#{dom_id task}_complete", false, task.complete %>
	<p contenteditable><%= task.content %></p>
	<%= link_to "&uarr;&darr;".html_safe, "#", class: "handle" %>
	<%= link_to "x", folder_task_path(task.folder.organization.permalink, task.folder, task), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this task?" } %>
<% end %>